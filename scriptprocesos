DROP TABLE IF EXISTS `descriptions`;
CREATE TABLE `descriptions` (
  `id_description` int NOT NULL AUTO_INCREMENT,
  `description_text` varchar(255) COLLATE utf8mb4_general_ci DEFAULT NULL,
  PRIMARY KEY (`id_description`)
) ENGINE=InnoDB DEFAULT CHARSET=utf8mb4 COLLATE=utf8mb4_general_ci;

DROP TABLE IF EXISTS `lesson_descriptions`;
CREATE TABLE `lesson_descriptions` (
  `id` int NOT NULL AUTO_INCREMENT,
  `lesson_id` int NOT NULL,
  `description_id` int NOT NULL,
  PRIMARY KEY (`id`),
  KEY `fk_lesson` (`lesson_id`),
  KEY `fk_description` (`description_id`),
  CONSTRAINT `fk_lesson` FOREIGN KEY (`lesson_id`) REFERENCES `lessons` (`id_lesson`),
  CONSTRAINT `fk_description` FOREIGN KEY (`description_id`) REFERENCES `descriptions` (`id_description`)
) ENGINE=InnoDB DEFAULT CHARSET=utf8mb4 COLLATE=utf8mb4_general_ci;


